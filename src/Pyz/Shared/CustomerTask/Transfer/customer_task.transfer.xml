<?xml version="1.0"?>
<transfers xmlns="spryker:transfer-01"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="spryker:transfer-01 http://static.spryker.com/transfer-01.xsd">

    <transfer name="CustomerTask">
        <property name="idCustomerTask" type="int"/>
        <property name="fkCreator" type="int"/>
        <property name="fkOwner" type="int"/>
        <property name="title" type="string"/>
        <property name="description" type="string"/>
        <property name="dueDate" type="string"/>
        <property name="status" type="string"/>
        <property name="tags" type="CustomerTaskTag[]" singular="tag"/>
    </transfer>

    <transfer name="CustomerTaskTag">
        <property name="idCustomerTaskTag" type="int"/>
        <property name="tag" type="string"/>
    </transfer>

    <transfer name="CustomerTaskCriteria" strict="true">
        <property name="customerTaskConditions" type="CustomerTaskConditions"/>
        <property name="pagination" type="Pagination"/>
    </transfer>

    <transfer name="CustomerTaskConditions" strict="true">
        <property name="idCustomerTask" type="int"/>
        <property name="customerTaskIds" type="int[]" singular="idCustomerTask"/>
        <property name="isOverdue" type="bool"/>
        <property name="title" type="string"/>
        <property name="description" type="string"/>
        <property name="tag" type="string"/>
    </transfer>

    <transfer name="CustomerTaskCollection" strict="true">
        <property name="customerTasks" type="CustomerTask[]" singular="customerTask"/>
        <property name="pagination" type="Pagination"/>
    </transfer>

</transfers>
